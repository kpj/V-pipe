[general]
aligner = bwa

[input]
datadir = samples_PE
samples_file = samples_PE.tsv
paired = true

fastq_suffix =
reference = references/NC_045512.2.fasta
gff_directory = references/gffs/
primers_file = references/primers/nCoV-2019.tsv

[output]
snv = True
local = True
global = False

visualization = True

[hmm_align]
leave_msa_temp = true


[coverage_intervals]
coverage=0

[snv]
conda=/cluster/work/bewi/pangolin/working-dev/test-shorah.yaml
mem=2048
time=1380
threads=64
localscratch=$TMPDIR

[applications]
shorah=/cluster/work/bewi/pangolin/shorah-test/test/shorah-wrap shotgun -t 64
